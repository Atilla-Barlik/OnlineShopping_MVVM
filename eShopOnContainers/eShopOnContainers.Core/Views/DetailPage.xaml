<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.PresentationMode="ModalAnimated"
             x:Class="eShopOnContainers.Core.Views.DetailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Image HorizontalOptions="Center" WidthRequest="300" Source="maco.jpg"/>
            <Frame BackgroundColor="GhostWhite" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Image Source="{Binding ImageSource}" HeightRequest="150" WidthRequest="150"/>
                    <Label Text="{Binding Product}" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
                    <Label Text="{Binding Price}" HorizontalOptions="Center" TextColor="Green" FontAttributes="Bold"/>
                    <Label Text="{Binding Aciklama}"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>